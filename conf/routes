# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()

#Endpoints for the users
GET     /users                controllers.UserController.list()
GET     /users/:id           controllers.UserController.get(id: Long)
POST    /users               controllers.UserController.create()
PUT     /users/:id           controllers.UserController.update(id: Long)
DELETE  /users/:id           controllers.UserController.delete(id: Long)

#Endpoints for equipments
GET     /equipment                controllers.EquipmentController.list()
GET     /equipment/:id           controllers.EquipmentController.get(id: Long)
POST    /equipment               controllers.EquipmentController.create()
PUT     /equipment/:id           controllers.EquipmentController.update(id: Long)
DELETE  /equipment/:id           controllers.EquipmentController.delete(id: Long)

#endpoints for allocation requests
GET     /allocationrequest                controllers.AllocationRequestController.list()
GET     /allocationrequest/:id           controllers.AllocationRequestController.get(id: Long)
POST    /allocationrequest               controllers.AllocationRequestController.create()
PUT     /allocationrequest/:id           controllers.AllocationRequestController.update(id: Long)
DELETE  /allocationrequest/:id           controllers.AllocationRequestController.delete(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
